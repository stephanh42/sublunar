{
  "parserOptions": {
    "ecmaVersion": "2017"
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "off",
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "strict": ["error", "global"]
  },
  "root": true
}
